@using Client.ViewModels;

@model LoginVM;

@{
   Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Login</title>
   <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
   <style>
      * {
         margin: 0;
         padding: 0;
      }
   </style>
</head>

<body style="background-color: #FAF5E4; margin: 0; padding: 0; height: 90vh; width: 90vw;">
   <div class="row" style="height: 90vh;">
      <div class="col-md-6 d-flex align-items-center justify-content-center">
         <img src="~/images/login-register.png" alt="image" height="600px">
      </div>
      <div class="col-md-6 d-flex align-items-center justify-content-center">
         <div class="box shadow bg-white rounded" style="padding: 50px; width: 70%;">
            <img src="~/images/logo.png" alt="logo">
            <p class="mt-3" style="font-size: 20px; width: 90%;">Kselleo helps teams move work
               forward.</p>
            <div style="background-color: #FAF5E4; width: max-content; margin:auto">
               <p class="text-center px-4 py-2 " style="color: #083DF9;">Log in to Kselleo</p>
            </div>

            <form method="post" onsubmit="Login()">
               <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               <div class="form-group">
                  <label class="control-label">Email</label>
                  <input id="email" type="email" class="form-control" placeholder="Enter email" required>
                  <span asp-validation-for="EmailAddress" class="text-danger pt-1"></span>
               </div>
               <div class="form-group">
                  <label class="control-label">Password</label>
                  <input id="password" type="password" class="form-control" placeholder="Enter password" required>
                  <span asp-validation-for="Password" class="text-danger pt-1"></span>
               </div>

               <div class="d-flex justify-content-between" style="gap: 15px; margin-top: 50px;">
                  <input type="submit" value="Log in" class="btn text-white"
                     style="background-color: #F8B401; width: 90%;" />
                  <a class="btn btn-outline-secondary" asp-controller="Auth" asp-action="Register"
                     style="width: 90%;">Register</a>
               </div>

               <div style="margin-top: 20px;" class="d-flex justify-content-center">
                  <a asp-action="ForgotPassword" class="text-danger text-center"
                     style="text-decoration: underline; margin: auto;">
                     forgot password
                  </a>
               </div>
            </form>
         </div>
      </div>
   </div>


   <script src="~/lib/jquery/dist/jquery.min.js"></script>
   <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
   <script src="~/js/Auth/login.js"></script>
</body>

</html>